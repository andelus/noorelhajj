{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": ["react", "react-native"],
	"rules": {
		"indent": ["tab"],
		"linebreak-style": ["unix"],
		"quotes": ["single"],
		"semi": ["always"]
	}
}
